<h1 class="h3 mb-0 text-gray-800">Product Categories</h1>

<div>
    <%= link_to new_category_path, {remote: true, class: "btn btn-info", id: "add-category-btn"} do %>
        <span class="fas fa-plus-square"></span>
    <% end %>
</div>
<br />

<div class="card shadow mb-4">
    <div class="card body">
        <div class="table-responsive">
            <table id="tableCategories" class="table table-bordered" width="100%">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @categories.each do |cat| %>
                        <tr id="category_<%= cat.id %>">
                            <td><%= cat.name %></td>
                            <td><%= cat.description %></td>
                            <td>
                                <%= link_to "edit", edit_category_path(cat), html_options = {class: "btn btn-info btn-xs", remote: true} %>
                                <%= link_to 'delete', cat, remote: true, method: :delete, data: { confirm: "Delete category: #{cat.name}?"}, class: "btn btn-danger btn-xs" %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%= render 'modal_categories' %>
